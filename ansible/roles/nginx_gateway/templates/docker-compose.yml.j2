services:
  nginx:
    image: nginx:stable-alpine
    container_name: nginx-gateway
    restart: unless-stopped
    ports:
      - "443:443"
    volumes:
      # Main config
      - /opt/nginx-gateway/nginx.conf:/etc/nginx/nginx.conf:ro
      - /opt/nginx-gateway/conf.d:/etc/nginx/conf.d:ro
      # TLS
      - /opt/nginx-gateway/ssl/dhparam.pem:/etc/nginx/dhparam.pem:ro
      - /etc/letsencrypt:/etc/letsencrypt:ro
      # Logs
      - /opt/nginx-gateway/logs:/srv/nginx/logs
      # Static site (base_domain)
{% if static_website.enabled | default(false) %}
      - {{ static_website.local_path }}:{{ static_website.local_path }}:ro
{% endif %}
    networks:
      - vps-services
    healthcheck:
      test: ["CMD", "wget", "-qO-", "http://127.0.0.1:8080/nginx_status"]
      interval: 30s
      timeout: 5s
      retries: 3

networks:
  vps-services:
    external: true
