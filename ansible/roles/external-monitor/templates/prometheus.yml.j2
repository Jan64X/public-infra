global:
  scrape_interval: 30s
  evaluation_interval: 30s
  external_labels:
    monitor: 'external-monitor'
    location: '{{ inventory_hostname }}'

# Scrape configuration
scrape_configs:
  # Scrape Prometheus itself
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']
    scrape_interval: 10s
    metrics_path: /metrics

  # Scrape Grafana metrics
  - job_name: 'grafana'
    static_configs:
      - targets: ['external-grafana:3000']
        labels:
          service: 'grafana'
    scrape_interval: 30s
    metrics_path: /metrics

  # Scrape local node_exporter for VPS system metrics
  - job_name: 'node_exporter'
    static_configs:
      - targets: ['host.containers.internal:9100']
        labels:
          instance: '{{ inventory_hostname }}'

  # Scrape local fail2ban_exporter for VPS fail2ban metrics
  - job_name: 'fail2ban_exporter'
    static_configs:
      - targets: ['host.containers.internal:9191']
        labels:
          instance: '{{ inventory_hostname }}'